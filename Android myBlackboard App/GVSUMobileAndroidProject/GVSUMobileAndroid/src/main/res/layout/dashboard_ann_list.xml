<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gvsu_blue"
    android:id="@+id/rv_ann_header"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ann_icon_white"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashlist_ann_section_title"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageView"
        android:typeface="normal"
        android:textSize="@dimen/gvsu_large" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewArrow"
        android:src="@drawable/right_arrow"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dashlist_ann_section_title"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/ll_dash_ann_list"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dashlist_ann_section_title"
        android:background="@color/gvsu_list_item_bg"
        />




</RelativeLayout>

    <Button
        style="?android:buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_load_more"
        android:id="@+id/dashlist_ld_more_btn"
        android:background="@color/gvsu_blue"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:visibility="gone"/>



</LinearLayout>