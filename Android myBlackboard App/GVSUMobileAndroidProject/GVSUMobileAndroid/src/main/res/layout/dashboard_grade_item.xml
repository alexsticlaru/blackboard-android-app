<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gvsu_blue"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:id="@+id/rl_grade_list_header">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/grade_icon_white"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/gvsu_large"
            android:id="@+id/dashlist_grade_section_title"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/imageView"
            android:paddingRight="30dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewArrow"
            android:src="@drawable/right_arrow"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/divider"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/rl_grade_list_header"
        android:visibility="gone"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/gvsu_item_title"
        android:id="@+id/dashlist_grade_title"
        android:gravity="center_vertical|left"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/tv_dashboard_grade_score"
        android:layout_alignTop="@id/tv_dashboard_grade_score"
        android:layout_toRightOf="@id/tv_dashboard_grade_score"
        android:layout_alignRight="@+id/dashlist_grade_date" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:background="@color/gvsu_blue_light"
        android:layout_below="@id/rl_grade_list_header"
        android:layout_marginTop="4dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/gvsu_text_light"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/gvsu_small"
            android:textColor="@color/gvsu_list_item_text"
            android:id="@+id/dashlist_grade_crs"
            android:gravity="right"
            android:paddingRight="10dp"
            android:background="@color/white"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/gvsu_small"
        android:textColor="@color/gvsu_text_medium"
        android:id="@+id/dashlist_grade_date"
        android:textAlignment="center"
        android:gravity="right"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rl_grade_list_header"
        android:layout_marginTop="5dp"
        android:background="@color/white" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_dashboard_grade_score"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/gvsu_list_item_text"
        android:textSize="@dimen/gvsu_large"
        android:textStyle="bold"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
