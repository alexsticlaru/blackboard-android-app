<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gvsu_list_item_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gvsu_blue"
        android:id="@+id/rv_ann_header"
        android:visibility="visible"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ann_icon_white"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashlist_ann_section_title"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/imageView"
            android:typeface="normal"
            android:textSize="@dimen/gvsu_large" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewArrow"
            android:src="@drawable/right_arrow"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/dashlist_ann_section_title"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/ll_dash_ann_list"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dashlist_ann_section_title"
            android:background="@color/gvsu_list_item_bg"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_ann_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:id="@+id/relativeLayout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/gvsu_list_item_text"
            android:id="@+id/dashlist_ann_title"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingLeft="70dp"
            android:paddingBottom="5dp"
            android:background="@color/white"
            android:layout_weight="1.29"
            android:layout_alignTop="@id/dashlist_ann_crs"
            android:layout_toRightOf="@+id/relativeLayout2"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_vertical"
            android:id="@+id/tv_ann_preview"
            android:textColor="@color/gvsu_text_medium"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:layout_below="@id/dashlist_ann_title"
            android:layout_centerHorizontal="true" />




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_alignBottom="@+id/dashlist_ann_title"
        android:layout_alignTop="@+id/dashlist_ann_title"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="@dimen/gvsu_small"
            android:textColor="@color/white"
            android:id="@+id/dashlist_ann_crs"
            android:background="@color/gvsu_blue_light"
            android:gravity="center"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="@dimen/gvsu_small"
            android:textColor="@color/gvsu_text_medium"
            android:id="@+id/dashlist_ann_date"
            android:clickable="true"
            android:background="@color/gvsu_blue_light"
            android:layout_below="@id/dashlist_ann_crs"
            android:gravity="center"
            android:layout_alignLeft="@+id/dashlist_ann_crs" />
    </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
